<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBlock.Views.MainPage.MenuPages.AboutPage"
             Visual="Material" Title="О приложении"
             Background="#383838">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0" Margin="5, 5, 5, 0">
                    <Label TextColor="White" Text="Добро пожаловать в CookBlog!" FontSize="25" HorizontalTextAlignment="Center" Padding="10" FontAttributes="Bold"/>
                    <Label TextColor="White" HorizontalTextAlignment="Center" Padding="20" Text="CookBlog - это кулинарная книга в вашем телефоне, где пользователи могут делится своими рецептами и получать за это фидбек от других пользователей." FontSize="20" LineBreakMode="WordWrap" />
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>