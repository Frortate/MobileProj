<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBlog.Views.AboutPage"
             Background="#383838"
             Visual="Material"
             xmlns:vm="clr-namespace:CookBlog.ViewModels"
             Title="О приложении">

    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0" Margin="5, 5, 5, 0">
                    <Label Text="Добро пожаловать в CookBlog!" FontSize="25" FontAttributes="Bold"/>
                    <Label Text="CookBlog - это кулинарная книга в вашем телефоне, где пользователи могут делится своими рецептами и получать за это фидбек от других пользователей." FontSize="20" LineBreakMode="WordWrap" />
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
