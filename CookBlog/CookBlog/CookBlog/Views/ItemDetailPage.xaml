<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBlog.Views.ItemDetailPage"
             Background="#383838"
             Visual="Material"
             Title="{Binding Text}">

    <StackLayout Spacing="20" Padding="15">
        <Frame CornerRadius="20" HasShadow="True" Padding="0" HeightRequest="250" WidthRequest="250">
            <StackLayout>
                <Image HeightRequest="250" WidthRequest="250"
                    Source="{Binding Photo}"
                    Aspect="AspectFill">
                </Image>
            </StackLayout>
        </Frame>
        <Label Text="Название:" FontSize="Medium"/>
        <Label Text="{Binding Text}" FontSize="Large" TextColor="White"/>
        <Label Text="Описание:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Large" TextColor="White"/>
    </StackLayout>
    
</ContentPage>